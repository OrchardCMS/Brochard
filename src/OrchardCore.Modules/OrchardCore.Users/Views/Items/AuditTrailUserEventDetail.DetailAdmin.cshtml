@model AuditTrailUserEventViewModel

<h3>@T["User Info"]</h3>

<table class="table table-sm table-hover">
    <tbody>
        <tr>
            <th class="w-25">@T["User ID"]</th>
            <td>@Model.UserEvent.UserId</td>
        </tr>
        <tr>
            <th>@T["Username"]</th>
            <td>@Model.UserEvent.UserName</td>
        </tr>
        <tr>
            <th>@T["Created at UTC"]</th>
            <td>@Model.UserEvent.CreatedUtc</td>
        </tr>
        <tr>
            <th>@T["Created by user ID"]</th>
            <td>@Model.UserEvent.CreatedById</td>
        </tr>
        <tr>
            <th>@T["Modified at UTC"]</th>
            <td>@Model.UserEvent.ModifiedUtc</td>
        </tr>
        <tr>
            <th>@T["Modified by user ID"]</th>
            <td>@Model.UserEvent.ModifiedById</td>
        </tr>
    </tbody>
</table>
